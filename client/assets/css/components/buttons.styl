/*--------------------------------------------------------------------
*
* BUTTONS
*
--------------------------------------------------------------------*/



.btn
  padding: $ui-spacing-fourth $ui-spacing-third
  border: none
  cursor: pointer
  background-color: $blue-light
  user-select: none
  transition: all .5s ease-in
  &:focus
    outline: none

  &:hover
    background-color: $blue-light

// Secondary button

.btn.add
  width: 10%


.btn.btn-secondary

  background: linear-gradient(to bottom, rgba($gray-lighter, 0) 0%,rgba($gray-lighter,0.3) 100%)
  color: white
  background-color: $red


  .add
    border: $ui-border
    background: linear-gradient(to bottom, rgba($gray-lighter, 0) 0%,rgba($gray-lighter,0.3) 100%)
    color: white
    background-color: $green
    width: 70%


  &:hover
    background: linear-gradient(to bottom, rgba($gray-lighter, 0) 0%,rgba($gray-lighter,0.6) 100%)
    color: inherit

// Warning button

.btn-warning
  background-color: $red

  &:hover
    background-color: darken($red, 20%)

// Button sizes

.btn-large
  padding: $ui-spacing-half $ui-spacing

.btn-small
  padding: $ui-spacing-fourth $ui-spacing-third

@media screen and (max-width:880px)

  .btn {
    width: 90%
    }

  .btn#add {
    width: 15%
    }
