/*--------------------------------------------------------------------
*
* NAVIGATION
*
--------------------------------------------------------------------*/

.nav-menu-handle
  visibility: hidden
  position: absolute
  left: -100%

.nav-main-wrapper label
  position: absolute
  top: 0
  left: 0
  display:block
  height: 69px
  width: 69px
  background-image: url("../img/icon-menu.svg")
  background-repeat: no-repeat
  background-position: 50% 50%
  background-size: 23px 23px
  background-color: $gray-lighter
  cursor: pointer

  &:hover
    opacity: .5

.nav
  background-color: tranpsarent
  z-index: 20
  position:fixed
  right:2%

.nav-item

  a
    display: block

    &:hover
      color: $blue-light
      background-color: $blue-darker

.nav-menu-handle:checked ~ .nav-main
  display: block
  position: fixed
  top: 69px
  left: 0
  width: 160px

  li
    display: block
    width: 100%
    border-top: 1px solid lighten($blue-darker, 20%)

    &:last-child
      border-bottom: 1px solid lighten($blue-darker, 20%)

@media screen and (min-width: $desktop-rg + $breakpoint-step) {
        .nav-items li {
          padding: $ui-spacing-half 0;
        }
        a {
          margin-top: 0px;
        }
      }

      /*Responsive Styles*/

      /* When the screen is less than 880 pixels wide,
      hide all list items,
      Show the list item that contains the link to open and close the sidemenu (li.icon) */
@media screen and (max-width:880px) {
        .nav {

        }
      }

      .nav-main label {
          float: right;
          margin-left: $ui-spacing;
          margin-top: $ui-spacing-half;
          margin-right: 50px;
          display: block;
          height: 20px;
          width: 23px;
          background: url("/images/icon-menu.svg") no-repeat 0 0;
          background-size: contain;
          cursor: pointer;
          &:hover {
            opacity: .5;
            background-color: #555;
          }
        }

      .nav-menu-handle:checked ~ .nav-items {
        display: block;
        position: fixed;
        float: left;
        top: 0px;
        //left: 0;
        width: 100%;
        background-color: #BF272E;

        li {
          display: inline-block;
          padding: 0px;
          width: 100%;
          border-top: $ui-border;
          &:last-child {
            border-bottom: $ui-border;
          }
          a {
            margin-top: 0px;
          }
        }
      }
