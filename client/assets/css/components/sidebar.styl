/*--------------------------------------------------------------------
*
* SIDEBAR
*
--------------------------------------------------------------------*/

.sidebar,
aside
  transition: transform .3s ease
  
.sidebar-docked
  transform: translateX(-200px)

aside
  position: absolute
  left: 0
  top: 69px
  height: calc(100% - 65px)
  width: 200px
  background-color: $blue-darker
  transform: translateX(0)
  
  .icon-menu-container
    display: block
    position: absolute
    right: -90px
    top: 0
    height: 60px
    width: 90px
    background-color: $gray-lighter
    text-align: center
    
  .icon-menu
    position: relative
    top: 20px
    cursor: pointer
    
  li ul .nav-item a
    padding-top: $ui-spacing-half
    padding-bottom: @padding-top
    padding-left: $ui-spacing + $ui-spacing-half
    font-size: $font-small
  
aside nav li:not(:last-child)
  border-bottom: 1px solid lighten($blue-darker, 20%)
  
.nav-header,
.nav-item a
  padding: $ui-spacing-half $ui-spacing  
  
.nav-item a,
.nav-item
  color: white  
  
.nav-header
  font-weight: $font-weight-bold
